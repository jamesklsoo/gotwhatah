<p id="notice"><%= notice %></p>
<p>
  <strong>User:</strong>
  <%= @event.user_id %>
</p>
<p>
  <strong>Location:</strong>
  <%= @event.area %>
</p>
<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>
<p>
  <% if !@event.images.empty? %>
    <%= image_tag @event.images[0] %>
  <% end %>
</p>
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>
<p>
  <strong>Start date:</strong>
  <%= @event.start_date %>
</p>
<p>
  <strong>End date:</strong>
  <%= @event.end_date %>
</p>
<p>
  <strong>Category:</strong>
  <%= @event.category %>
</p>
<p>
  <strong>Likes:</strong>
  <%= @event.get_upvotes.size %>
</p>
<p>
  <strong>Dislikes:</strong>
  <%= @event.get_downvotes.size %>
</p>
<br>
<p>
  <%= social_share_button_tag("#{@event.title} #{@event.description} #{@event.area}") %>
</p>
<br>
<%= link_to 'Back', events_path(@event.id) %>
<br>
<% if current_user && current_user.id == @event.user_id %>
  <%= link_to 'Edit', edit_event_path(@event.id) %> | <%= link_to 'Delete', event_path(@event.id), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>